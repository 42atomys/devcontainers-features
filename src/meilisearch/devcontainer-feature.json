{
  "name": "Meilisearch",
  "id": "meilisearch",
  "version": "1.0.0",
  "description": "A feature to install Meilisearch",
  "options": {
    "version": {
      "type": "string",
      "proposals": [
        "latest",
        "v1.10.3"
      ],
      "default": "latest",
      "description": "The version of Meilisearch to install"
    }
  },
  "installsAfter": [
    "ghcr.io/devcontainers/features/common-utils"
  ],
  "mounts": [
    {
      "source": "dind-var-lib-meilisearch-${devcontainerId}",
      "target": "/var/lib/meilisearch/data",
      "type": "volume"
    }
  ],
  "entrypoint": "/usr/local/share/meilisearch-server-init.sh",
  "privileged": true
}
